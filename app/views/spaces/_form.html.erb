<%= form_with model: space, data: { controller: 'set-location', set_location_map_id_value: Rails.application.credentials.gcp.google_map.map_id } do |f| %>
    <div class="form-control w-full max-w-xs mb-5 mx-auto">
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name, class: 'input input-bordered w-full max-w-xs' %>
    </div>

    <div class="form-control w-full max-w-xs mb-5 mx-auto">
      <%= f.label :description, class: 'label' %>
      <%= f.text_area :description, class: 'textarea textarea-bordered w-full max-w-xs' %>
    </div>

    <div class="form-control w-full max-w-xs mb-5 mx-auto">
      <%= f.label :address, class: 'label' %>
      <%= f.text_field :address, class: 'input input-bordered w-full max-w-xs' %>
    </div>

    <div class="form-control w-full max-w-xs mb-5 mx-auto">
      <%= f.label :nearest_station, class: 'label' %>
      <%= f.text_field :nearest_station, class: 'input input-bordered w-full max-w-xs' %>
    </div>

    <div class="form-control w-full max-w-xs mb-5 mx-auto">
      <%= f.label :space_type_ids, class: 'label' %>
      <div class="flex flex-wrap">
        <%= f.collection_check_boxes :space_type_ids, SpaceType.all, :id, :name do |b| %>
          <%= b.label class: 'label cursor-pointer justify-start gap-3' do %>
            <%= b.check_box class: 'checkbox checkbox-primary' %>
            <span class="label-text"><%= b.text %></span>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="form-control w-full max-w-xs mx-auto">
      <%= f.label :features, class: 'label' %>
      <div class="flex flex-wrap">
      <%= f.collection_check_boxes :feature_ids, Feature.all, :id, :name do |b| %>
        <%= b.label class: 'label cursor-pointer justify-start gap-3' do %>
          <%= b.check_box class: 'checkbox checkbox-primary' %>
          <span class="label-text"><%= b.text %></span>
        <% end %>
      <% end %>
      </div>
    </div>

    <div class="flex gap-5 mx-auto max-w-xs">
      <div class="form-control w-full max-w-xs mb-5">
        <%= f.label :latitude, class: 'label' %>
        <%= f.text_field :latitude, class: 'input input-bordered w-full max-w-xs bg-gray-100', readonly: true, data: { set_location_target: 'latitude' } %>
      </div>
      <div class="form-control w-full max-w-xs mb-5">
        <%= f.label :longitude, class: 'label' %>
        <%= f.text_field :longitude, class: 'input input-bordered w-full max-w-xs bg-gray-100', readonly: true, data: { set_location_target: 'longitude' } %>
      </div>
    </div>

    <p class="w-full max-w-xs  mx-auto">クリックしてピンを立ててください</p>
    <div data-set-location-target="map" class="h-[500px] mb-5 w-full mx-auto"></div>

    <div class="form-control w-full max-w-xs mb-5 mx-auto">
      <%= f.label :images, class: 'label' %>
      <%= f.file_field :images, class: '', multiple: true %>
    </div>

    <div class="max-w-xs mx-auto w-full mt-3">
      <%= f.submit '登録', class: 'btn btn-primary mx-auto max-w-xs w-full' %>
    </div>
  <% end %>